---
export interface CardProps {
    href: string;
    title: string;
    body: string;
    imageSrc?: string; // Add imageSrc as an optional prop
}
const { href, title, body, imageSrc } = Astro.props;
---

<div class="card-container">
    <a href={href} class="card">
        <h3>{title}</h3>
        {imageSrc && <img src={imageSrc} alt={title} class="card-image" />}
        <p>{body}</p>
    </a>
</div>
<style>
    .card {
    list-style: none;
    display: flex;
    flex-direction: column; /* Stack elements vertically */
    padding: 10px; /* Reduce padding inside the card */
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    width:375px; /* Set a fixed width for the card */
    max-width: 100%; /* Ensure responsiveness */
    margin-left: 0; /* Align the card to the left */
    }
    .card-image {
        width: 100%; /* Make the image take the full width of the card */
        height: auto;
        border-radius: 8px 8px 0 0;
        margin-bottom: 1rem;
    }
    h3 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem;
        color: white; /* Optional: Adjust text color */
        text-align: center; /* Optional: Center the title */
    }
    p {
        font-size: 1rem;
        margin: 0;
        color: white; /* Optional: Adjust text color */
    }
    .card-container {
    display: flex; /* Use flexbox to arrange cards in a row */
    justify-content: space-between; /* Add space between cards */
    align-items: flex-start; /* Align cards to the top */
    width: 100%; /* Ensure the container spans the full width */
    margin: 0 auto; /* Center the container horizontally */
    padding: 0; /* Remove any default padding */
    gap: 1rem; /* Add spacing between cards */
}
</style>