  font-size: 15px;
  color: white;
  text-align: left; /* Aligns the text to the left */
}
text ul {
  list-style: none; /* Remove default bullet points */
  padding: 0; /* Remove default padding */
  margin: 0; /* Remove default margin */
  text-align: right; /* Align the list items to the right */
}

.text ul li {
