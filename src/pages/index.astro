---
import 'aos/dist/aos.css';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
//import Card from '../components/Card.astro';
import Card from '../components/newCard.astro';
import Slide from '../components/Slide.astro';
---

<html style="background-color:rgb(28, 0, 128);>

	    <!-- responsive meta -->
		<meta name="viewport" content="width=device-width"
		  />  
<Navigation/>
</html>
<br>
<div class="max-w-screen-l flex flex-wrap items-center justify-between mx-auto p-5">
	<div class="slide-container">
		<Slide />
	</div>
</div>
<br>
<br>
<main>
<div class="max-w-screen-l flex flex-wrap items-center justify-between mx-auto p-5">
	<body> 
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
		<script>
			import AOS from "aos";
			AOS.init();
		  </script>
		
		<h1 data-aos="flip-up" data-aos-delay="300">CPA Accounting & Tax Services </h1>
		
		<h2 data-aos="fade-up" data-aos-delay="300"> A Single Stop Provider for all your Tax and Accounting Solutions.</h2>
		<br>
		<ul role="list" class="link-card-grid">
			<Card
				href="/taxpreparation/"
				title="Tax Services"
				body="At Singh CPA Inc, We support our tax clients with proactive planning and efficient compliance strategies designed to maximize savings and minimize risk."
				imageSrc="../images/TaxPreparer.jpg" 
			/>
			<Card
				href="/accounting/"
				title="Accounting"
				body="At Singh CPA Inc, we provide comprehensive accounting services tailored to meet the unique needs of individuals, small businesses, and corporations."
				imageSrc="../images/Accounting.jpg"
			/>
			<Card
				href="/payroll/"
				title="Payroll Services"
				body="Managing payroll can be time-consuming and complex. We simplify it by handling every detail, ensuring your employees are paid accurately and on time."
				imageSrc="../images/Accounting1.jpg"
			/>
		</ul>
</div>
<br>
<br>
</main>
<Footer />
</body>
</html>
<style>
	main {
		margin: 10px;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		text-align: left;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		color: white;
	 	text-align: left;
		white-space: nowrap; /* Prevent text from wrapping to the next line */
	}
	h2 {
		font-size: rem;
		font-weight: 100;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		color:white;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
	display: flex; /* Use flexbox for better control */
    flex-wrap: nowrap; /* Allow wrapping on smaller screens */
    gap: 7rem; /* Add space between cards */
    padding: 0;
    justify-content: space-between; /* Distribute cards evenly with space between them */
    align-items: flex-start; /* Align items to the top */
	text-align: left; /* Center text inside cards */
	

}
.slide-container {
    display: flex; /* Use flexbox for alignment */
    justify-content: center; /* Center horizontally */
    align-items: center; /* Center vertically */
    width: 100%; /* Ensure the container spans the full width */
    margin: 0 auto; /* Center the container itself */
}
</style>
